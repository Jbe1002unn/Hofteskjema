definition
	OBSERVATION[at0000] matches {    -- Modified Harris Hip Score (mHHS)
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0004] occurrences matches {0..1} matches {    -- 1. Pain
										value matches {
											1|[local::at0005],
											2|[local::at0006],
											3|[local::at0007],
											4|[local::at0008],
											5|[local::at0009],
											6|[local::at0010]
										}
									}
									ELEMENT[at0011] occurrences matches {0..1} matches {    -- 2. Support devices
										value matches {
											1|[local::at0012],
											2|[local::at0013],
											3|[local::at0014],
											4|[local::at0015],
											5|[local::at0016],
											6|[local::at0017]
										}
									}
									ELEMENT[at0018] occurrences matches {0..1} matches {    -- 3. Distance walked
										value matches {
											1|[local::at0019],
											2|[local::at0020],
											3|[local::at0021],
											4|[local::at0022],
											5|[local::at0023]
										}
									}
									ELEMENT[at0024] occurrences matches {0..1} matches {    -- 4. Limp
										value matches {
											1|[local::at0025],
											2|[local::at0026],
											3|[local::at0027],
											4|[local::at0028]
										}
									}
									ELEMENT[at0029] occurrences matches {0..1} matches {    -- 5. Activities - shoes, socks
										value matches {
											1|[local::at0030],
											2|[local::at0031],
											3|[local::at0032]
										}
									}
									ELEMENT[at0033] occurrences matches {0..1} matches {    -- 6. Stairs
										value matches {
											1|[local::at0034],
											2|[local::at0035],
											3|[local::at0036],
											4|[local::at0037]
										}
									}
									ELEMENT[at0038] occurrences matches {0..1} matches {    -- 7. Public transportation
										value matches {
											1|[local::at0039],
											2|[local::at0040]
										}
									}
									ELEMENT[at0041] occurrences matches {0..1} matches {    -- 8. Sitting
										value matches {
											1|[local::at0042],
											2|[local::at0043],
											3|[local::at0044]
										}
									}
									ELEMENT[at0085] occurrences matches {0..1} matches {    -- Total score
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..91|}
											}
										}
									}
									ELEMENT[at0091] occurrences matches {0..1} matches {    -- Adjusted score
										value matches {
											C_DV_QUANTITY <
												property = <[openehr::380]>
												list = <
													["1"] = <
														units = <"1">
														magnitude = <|0.0..100.0|>
														precision = <|1|>
													>
												>
											>
										}
									}
									ELEMENT[at0086] occurrences matches {0..1} matches {    -- Grading
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0087,    -- Poor
													at0088,    -- Fair
													at0089,    -- Good
													at0090]    -- Excellent
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0047] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0084] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

